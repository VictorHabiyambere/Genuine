<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#74A8D5">

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="462dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8263919828062957/1157262551"
        ads:layout_constraintBottom_toBottomOf="parent"
        ads:layout_constraintEnd_toEndOf="@+id/editText2"
        ads:layout_constraintStart_toStartOf="@+id/editText2"
        ads:layout_constraintTop_toBottomOf="@+id/textView6"
        ads:layout_constraintVertical_bias="1.0" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView4"
        android:layout_width="388dp"
        android:layout_height="16dp"
        android:layout_marginEnd="2dp"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-8263919828062957/5982213823"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.484"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="141dp"
        android:text="Friends List"
        android:textSize="20sp"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.474"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="367dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="15dp"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.442"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/textView6">

        <ListView
            android:id="@+id/ItemList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="367dp"
        android:layout_height="44dp"
        android:layout_marginTop="28dp"
        android:orientation="horizontal"
        ads:layout_constraintHorizontal_bias="0.461"
        ads:layout_constraintTop_toBottomOf="@+id/editText2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/messagebox"
            android:backgroundTint="#FD1313"
            android:onClick="searchUser"
            android:text="Search" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="374dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="32dp"
        ads:layout_constraintBottom_toTopOf="@+id/editText2"
        ads:layout_constraintEnd_toEndOf="@+id/scrollView5"
        ads:layout_constraintStart_toStartOf="@+id/scrollView5"
        ads:layout_constraintTop_toBottomOf="@+id/textView2">

        <ListView
            android:id="@+id/ItemList2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView5"
        android:layout_width="383dp"
        android:layout_height="26dp"
        ads:layout_constraintBottom_toTopOf="@+id/textView7"
        ads:layout_constraintEnd_toEndOf="@+id/linearLayout3"
        ads:layout_constraintHorizontal_bias="0.434"
        ads:layout_constraintStart_toStartOf="@+id/linearLayout3"
        ads:layout_constraintTop_toBottomOf="@+id/textView4">

        <ListView
            android:id="@+id/ItemList3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </ScrollView>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="382dp"
        android:layout_height="46dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="13dp"
        android:ems="10"
        android:hint="Search User"
        android:inputType="text"
        ads:layout_constraintHorizontal_bias="0.47"
        ads:layout_constraintTop_toBottomOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="134dp"
        android:layout_weight="1"
        android:text="Friend Requests"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/scrollView5"
        ads:layout_constraintEnd_toEndOf="parent"
        ads:layout_constraintHorizontal_bias="0.487"
        ads:layout_constraintStart_toStartOf="parent"
        ads:layout_constraintTop_toBottomOf="@+id/adView4"
        ads:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:layout_marginTop="16dp"
        android:text="Users"
        android:textSize="20sp"
        ads:layout_constraintEnd_toEndOf="@+id/editText2"
        ads:layout_constraintHorizontal_bias="0.503"
        ads:layout_constraintStart_toStartOf="@+id/editText2"
        ads:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="66dp"
        android:text="Score:0"
        android:textSize="20sp"
        ads:layout_constraintBottom_toTopOf="@+id/scrollView4"
        ads:layout_constraintEnd_toStartOf="@+id/textView2"
        ads:layout_constraintHorizontal_bias="0.0"
        ads:layout_constraintStart_toStartOf="@+id/editText2"
        ads:layout_constraintTop_toBottomOf="@+id/scrollView5"
        ads:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>